<h4>Post details</h4>
<br/>
	<p>
		<%= @row['content'] %>
		<br/>
		<br/>
		Added at: <%= @row['created_date'] %>
		<br/>
	</p>
<br/>
<h4>Comments:</h4>
<br/>
	<p>
		<% @comments.each do |comment| %>
		<%= comment['content'] %>
		<br/>
		<span style="font-size: 75%; color: #999">Added on: <%= comment['created_date'] %></span>
		<hr/>
		<%end%>
	</p>
	
	<p>
		<form action="/details/<%= @row['id'] %>" method="POST">
		  <div class="form-group">
		  <textarea name="content" class="form-control" rows="6" placeholder="Type comment text here"></textarea>
		</div>
		  <button type="submit" class="btn btn-primary">Add comment</button>
		</form>
	</p>